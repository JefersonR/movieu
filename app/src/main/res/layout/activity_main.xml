<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_overlay2"
    android:padding="@dimen/spacing_large">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <br.udacity.components.CustomTextView
            android:id="@+id/tv_nothing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="@dimen/spacing_medium"
            android:paddingEnd="16dp"
            android:paddingStart="@dimen/regular_space_one"
            android:text="@string/label_movie_not_found"
            android:textColor="@color/white_background"
            android:textSize="22sp"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rc_movies"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

</android.support.v4.widget.SwipeRefreshLayout>